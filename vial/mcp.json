{
  "oauth": {
    "client_id": "mcp_controller",
    "client_secret": "your_client_secret",
    "scopes": ["vial:read", "vial:write", "agent:read", "agent:write", "agent:config"]
  },
  "service_discovery": {
    "enabled": true,
    "dns": {
      "srv_record": "_mcp._tcp.local",
      "port": 8080
    },
    "registry": {
      "type": "in-memory",
      "ttl": 60000
    }
  },
  "agent": {
    "max_agents": 10,
    "ping_interval": 30000
  },
  "ai_models": [
    {
      "name": "Genie3",
      "endpoint": "https://api.genie3.example/mcp",
      "config": { "model": "genie3", "version": "3.0" }
    },
    {
      "name": "ChatGPT5",
      "endpoint": "https://api.chatgpt5.example/mcp",
      "config": { "model": "chatgpt5", "version": "5.0" }
    },
    {
      "name": "Grok4",
      "endpoint": "https://api.grok4.example/mcp",
      "config": { "model": "grok4", "version": "4.0" }
    }
  ]
}

// Rebuild Instructions: Place in /vial/. Ensure used by server.js and agent_manager.js. Update ai_models endpoints for actual services. Run Troubleshoot in vial.html to check for errors.
