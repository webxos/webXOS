{
  "api_base_url": "http://localhost:8080/mcp",
  "ws_url": "ws://localhost:8080/ws",
  "oauth": {
    "client_id": "vial_mcp_client",
    "client_secret": "your_client_secret",
    "redirect_uri": "http://localhost:8080/auth/callback",
    "scopes": ["vial:read", "vial:write", "training:execute", "logs:read"]
  },
  "vial_limit": 4,
  "log_retention_days": 30,
  "training_defaults": {
    "model": "default",
    "epochs": 5
  }
}

// Rebuild Instructions: Place in /vial/. If missing, recreate with the above content. Update client_secret as needed. Validate with /vial/src/server.js and /vial/src/oauth.js. Run Troubleshoot to check for errors.
