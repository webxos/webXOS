{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": { "type": "string", "pattern": "^vial_\\d{6}$" },
        "status": { "type": "string", "enum": ["running", "stopped"] },
        "code": {
            "type": "object",
            "properties": {
                "js": { "type": "string" }
            },
            "required": ["js"]
        },
        "filePath": { "type": "string", "pattern": "^/vial/uploads/vial.*\\.js$" },
        "createdAt": { "type": "string", "format": "date-time" },
        "codeLength": { "type": "integer", "minimum": 0 },
        "latencyHistory": {
            "type": "array",
            "items": { "type": "number", "minimum": 0 }
        }
    },
    "required": ["id", "status", "code", "filePath", "createdAt", "codeLength", "latencyHistory"]
}
