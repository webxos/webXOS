// vial.schema.json - Schema for vial data
// Installation: Place in /vial/schemas/. No additional setup required.
// Build: Ensure accessible at /vial/schemas/vial.schema.json.
// For developers: Used for validating vial data in vial_manager.js.

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "code": { "type": "object", "properties": { "js": { "type": "string" } } },
    "training": { "type": "object", "properties": { "model": { "type": "string" }, "epochs": { "type": "integer" } } },
    "agentId": { "type": "string" }
  },
  "required": ["id", "code", "training", "agentId"]
}
