{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vial Schema",
  "type": "object",
  "properties": {
    "id": { "type": "string", "pattern": "^vial_[0-9]{6}$" },
    "code": {
      "type": "object",
      "properties": { "js": { "type": "string" } },
      "required": ["js"]
    },
    "training": {
      "type": "object",
      "properties": {
        "model": { "type": "string", "enum": ["default", "advanced"] },
        "epochs": { "type": "integer", "minimum": 1 }
      },
      "required": ["model", "epochs"]
    },
    "status": { "type": "string", "enum": ["running", "stopped"] },
    "latencyHistory": { "type": "array", "items": { "type": "number" } },
    "filePath": { "type": "string" },
    "createdAt": { "type": "string", "format": "date-time" },
    "codeLength": { "type": "integer", "minimum": 0 }
  },
  "required": ["id", "code", "training", "status", "latencyHistory", "filePath", "createdAt", "codeLength"]
}

// Rebuild Instructions: Place in /vial/schemas/. If missing, recreate with the above content. Validate with /vial/src/vial_manager.js during vial creation. Run Troubleshoot to check for errors.
