{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": { "type": "integer", "minimum": 1 },
        "timestamp": { "type": "string", "format": "date-time" },
        "event_type": { "type": "string", "enum": ["system", "auth", "vial", "training", "monitor", "websocket", "network", "diagnostics", "file", "api", "export", "error"] },
        "message": { "type": "string" },
        "metadata": { "type": "object" },
        "urgency": { "type": "string", "enum": ["INFO", "HIGH", "CRITICAL"] }
    },
    "required": ["timestamp", "event_type", "message", "metadata", "urgency"]
}
