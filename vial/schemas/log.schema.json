// log.schema.json - Schema for log data
// Installation: Place in /vial/schemas/. No additional setup required.
// Build: Ensure accessible at /vial/schemas/log.schema.json.
// For developers: Used for validating logs in log_manager.js.

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "timestamp": { "type": "string", "format": "date-time" },
    "event_type": { "type": "string" },
    "message": { "type": "string" },
    "metadata": { "type": "object" },
    "urgency": { "type": "string", "enum": ["LOW", "INFO", "HIGH", "CRITICAL"] }
  },
  "required": ["timestamp", "event_type", "message", "urgency"]
}
