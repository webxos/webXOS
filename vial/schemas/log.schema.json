{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Log Schema",
  "type": "object",
  "properties": {
    "id": { "type": "integer" },
    "timestamp": { "type": "string", "format": "date-time" },
    "event_type": { "type": "string", "enum": ["system", "vial", "monitor", "training", "void", "export", "auth", "websocket", "file", "api", "diagnostics"] },
    "message": { "type": "string" },
    "metadata": { "type": "object" },
    "urgency": { "type": "string", "enum": ["LOW", "HIGH", "CRITICAL"] },
    "synced": { "type": "boolean" }
  },
  "required": ["timestamp", "event_type", "message", "metadata", "urgency"]
}

// Rebuild Instructions: Place in /vial/schemas/. If missing, recreate with the above content. Validate with /vial/src/log_manager.js during logging. Run Troubleshoot to check for errors.
