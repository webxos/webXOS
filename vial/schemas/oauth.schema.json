{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "client_id": { "type": "string" },
    "scopes": {
      "type": "array",
      "items": { "type": "string", "enum": ["vial:read", "vial:write", "agent:read", "agent:write", "agent:config"] }
    },
    "exp": { "type": "integer" },
    "iat": { "type": "integer" },
    "agentId": { "type": "string", "pattern": "^(agent|ai)_[0-9a-f]{6}$" }
  },
  "required": ["client_id", "scopes", "exp", "iat"]
}

// Rebuild Instructions: Place in /vial/schemas/. Ensure used by oauth.js. Run Troubleshoot in vial.html to check for errors.
