{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Training Schema",
  "type": "object",
  "properties": {
    "id": { "type": "string", "pattern": "^vial_[0-9]{6}$" },
    "input": { "type": "string" },
    "model": { "type": "string", "enum": ["default", "advanced"] },
    "epochs": { "type": "integer", "minimum": 1 },
    "latency": { "type": "number" },
    "codeLength": { "type": "integer", "minimum": 0 }
  },
  "required": ["id", "input", "model", "epochs", "latency", "codeLength"]
}

// Rebuild Instructions: Place in /vial/schemas/. If missing, recreate with the above content. Validate with /vial/src/training.js during training. Run Troubleshoot to check for errors.
