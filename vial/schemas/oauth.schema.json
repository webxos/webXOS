{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "client_id": { "type": "string" },
        "client_secret": { "type": "string" },
        "redirect_uri": { "type": "string", "format": "uri" },
        "scopes": {
            "type": "array",
            "items": { "type": "string" }
        }
    },
    "required": ["client_id", "client_secret", "redirect_uri", "scopes"]
}
