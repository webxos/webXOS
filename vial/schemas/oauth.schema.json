// oauth.schema.json - Schema for OAuth configuration
// Installation: Place in /vial/schemas/. No additional setup required.
// Build: Ensure accessible at /vial/schemas/oauth.schema.json.
// For developers: Used for validating OAuth data in oauth.js.

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "client_id": { "type": "string" },
    "client_secret": { "type": "string" },
    "redirect_uri": { "type": "string" },
    "provider": { "type": "string" }
  },
  "required": ["client_id", "client_secret", "redirect_uri", "provider"]
}
