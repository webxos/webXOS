// wallet.schema.json - Schema for $WEBXOS wallet data
// Installation: Place in /vial/schemas/. No additional setup required.
// Build: Ensure accessible at /vial/schemas/wallet.schema.json.
// For developers: Used for validating wallet data in walletagent.js.

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "address": { "type": "string" },
    "publicKey": { "type": "string" },
    "encryptedPrivateKey": { "type": "string" },
    "balance": { "type": "integer" },
    "createdAt": { "type": "string", "format": "date-time" }
  },
  "required": ["address", "publicKey", "encryptedPrivateKey", "balance", "createdAt"]
}
