{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": { "type": "string", "pattern": "^vial_\\d{6}$" },
        "input": { "type": "string" },
        "agentId": { "type": "string", "pattern": "^agent_.*$" },
        "model": { "type": "string", "enum": ["nanoGPT"] },
        "epochs": { "type": "integer", "minimum": 1 }
    },
    "required": ["id", "input", "agentId", "model", "epochs"]
}
