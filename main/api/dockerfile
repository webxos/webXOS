FROM python:3.11-slim

WORKDIR /app

COPY main/api/mcp/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY main/api/mcp/ .

# Install SSL dependencies and generate self-signed certificate for WebSocket
RUN apt-get update && apt-get install -y openssl
RUN openssl req -x509 -newkey rsa:4096 -nodes -out cert.pem -keyout key.pem -days 365 -subj "/CN=localhost"

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--ssl-keyfile", "key.pem", "--ssl-certfile", "cert.pem"]
