# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy backend files
COPY main/api/mcp /app
COPY package.json /app/

# Install dependencies
RUN npm install

# Expose port for Netlify Functions
EXPOSE 8888

# Start Netlify Functions server
CMD ["npx", "netlify", "dev", "--port", "8888"]
