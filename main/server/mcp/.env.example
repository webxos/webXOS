# main/server/mcp/.env.example
# MongoDB connection URI
MONGODB_URI=mongodb://localhost:27017/vial_mcp

# Redis connection URI
REDIS_URI=redis://localhost:6379

# Secret key for encryption
SECRET_KEY=your-secret-key

# GitHub API token for resource synchronization
GITHUB_TOKEN=your-github-token

# Translation API credentials
TRANSLATION_API_KEY=your-translation-api-key
TRANSLATION_API_URL=https://api.example.com/translate

# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Cache TTL in seconds
CACHE_TTL_SECONDS=3600

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000

# Webhook secret for signature verification
WEBHOOK_SECRET=your-webhook-secret

# API configuration file path
API_CONFIG_FILE=api_config.json
