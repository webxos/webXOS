{
  "collections": [
    {
      "name": "users",
      "schema": {
        "user_id": {"type": "string", "required": true, "unique": true},
        "wallet_id": {"type": "string", "required": true, "unique": true},
        "email": {"type": "string"},
        "created_at": {"type": "date", "default": "CURRENT_TIMESTAMP"},
        "updated_at": {"type": "date", "default": "CURRENT_TIMESTAMP"},
        "settings": {"type": "object"}
      }
    },
    {
      "name": "wallets",
      "schema": {
        "wallet_id": {"type": "string", "required": true, "unique": true},
        "user_id": {"type": "string", "required": true},
        "api_key": {"type": "string", "required": true},
        "created_at": {"type": "date", "default": "CURRENT_TIMESTAMP"},
        "updated_at": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    },
    {
      "name": "notes",
      "schema": {
        "note_id": {"type": "string", "required": true, "unique": true},
        "wallet_id": {"type": "string", "required": true},
        "content": {"type": "string", "required": true},
        "resource_id": {"type": "string"},
        "db_type": {"type": "string", "required": true},
        "created_at": {"type": "date", "default": "CURRENT_TIMESTAMP"},
        "updated_at": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    },
    {
      "name": "resources",
      "schema": {
        "resource_id": {"type": "string", "required": true, "unique": true},
        "wallet_id": {"type": "string", "required": true},
        "content": {"type": "string", "required": true},
        "db_type": {"type": "string", "required": true},
        "created_at": {"type": "date", "default": "CURRENT_TIMESTAMP"},
        "updated_at": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    },
    {
      "name": "quantum_links",
      "schema": {
        "link_id": {"type": "string", "required": true, "unique": true},
        "wallet_id": {"type": "string", "required": true},
        "vial_id": {"type": "string", "required": true},
        "db_type": {"type": "string", "required": true},
        "content": {"type": "object", "required": true},
        "created_at": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    },
    {
      "name": "audit_logs",
      "schema": {
        "log_id": {"type": "string", "required": true, "unique": true},
        "wallet_id": {"type": "string"},
        "endpoint": {"type": "string", "required": true},
        "action": {"type": "string", "required": true},
        "details": {"type": "object"},
        "timestamp": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    },
    {
      "name": "performance_metrics",
      "schema": {
        "metric_id": {"type": "string", "required": true, "unique": true},
        "endpoint": {"type": "string", "required": true},
        "wallet_id": {"type": "string"},
        "response_time": {"type": "number", "required": true},
        "status_code": {"type": "integer", "required": true},
        "timestamp": {"type": "date", "default": "CURRENT_TIMESTAMP"}
      }
    }
  ]
}
