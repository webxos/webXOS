{
  "agents": {
    "bsonType": "object",
    "required": ["agent_name", "status", "last_updated"],
    "properties": {
      "_id": { "bsonType": "objectId" },
      "agent_name": { "bsonType": "string", "description": "Unique name of the agent" },
      "status": { "bsonType": "string", "enum": ["active", "inactive", "stopped"], "description": "Agent status" },
      "last_updated": { "bsonType": "date", "description": "Last update timestamp" }
    }
  },
  "tasks": {
    "bsonType": "object",
    "required": ["agent_id", "task_type", "task_data", "status", "created_at"],
    "properties": {
      "_id": { "bsonType": "objectId" },
      "agent_id": { "bsonType": "objectId", "description": "Reference to agent" },
      "task_type": { "bsonType": "string", "description": "Type of task" },
      "task_data": { "bsonType": "string", "description": "Task data" },
      "status": { "bsonType": "string", "enum": ["pending", "running", "completed", "failed"], "description": "Task status" },
      "created_at": { "bsonType": "date", "description": "Task creation timestamp" }
    }
  },
  "wallets": {
    "bsonType": "object",
    "required": ["user_id", "address", "balance", "hash", "webxos", "transactions"],
    "properties": {
      "_id": { "bsonType": "objectId" },
      "user_id": { "bsonType": "string", "description": "User ID associated with wallet" },
      "address": { "bsonType": "string", "description": "Wallet address" },
      "balance": { "bsonType": "double", "description": "Wallet balance" },
      "hash": { "bsonType": "string", "description": "Wallet hash" },
      "webxos": { "bsonType": "double", "description": "WEBXOS token balance" },
      "transactions": {
        "bsonType": "array",
        "items": {
          "bsonType": "object",
          "properties": {
            "type": { "bsonType": "string", "description": "Transaction type" },
            "timestamp": { "bsonType": "date", "description": "Transaction timestamp" }
          }
        }
      }
    }
  }
}
