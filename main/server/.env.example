# main/server/.env.example
# Example environment variables for Vial MCP Controller
# Copy this file to .env and fill in actual values for deployment

# Server configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000

# Database configuration
MONGODB_URI=mongodb://localhost:27017
REDIS_URI=redis://localhost:6379

# Authentication configuration
RP_ID=vial-mcp.local
TRANSLATION_API_URL=https://api.example.com/translate
TRANSLATION_API_KEY=your_translation_api_key

# Wallet configuration
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your_infura_key

# Security configuration
SECRET_KEY=your_random_secret_key_32_bytes
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=1440

# Logging and monitoring
PROMETHEUS_PORT=9090
LOG_LEVEL=DEBUG
