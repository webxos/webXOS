# Use official Node.js image
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy frontend files
COPY main/frontend/public /app/public
COPY package.json /app/

# Install dependencies
RUN npm install

# Expose port
EXPOSE 80

# Serve frontend with a simple static server
CMD ["npx", "serve", "-s", "public", "-l", "80"]
